<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Home Page</title>
    <style>
        body, html {
            height: 100%;
            margin: 0;
        }
        .parallax {
            background-image: url('/images/bg.jpg'); /* Use the correct path */
            height: 90vh; /* Ensure it takes the full viewport height */
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            
            background-size: 80%;
        }
        .content {
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
        }
        .card-container {
            padding: 20px;
        }
        .card {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
        .card-img-top {
            height: 200px; 
            object-fit: cover;
        }
        .card-body {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
        .card-title {
            margin-bottom: 1rem;
        }
        .btn-primary {
            align-self: flex-end;
        }
        .heading {
            font-size: 5em;
            color: rgb(47, 107, 238);
        }
        .heading-2 {
            margin-left: 10px;
            font-size: 5em;
            color: rgb(22, 49, 108);
            font-weight: bold;
        }
    </style>
</head>
<body>
    <%- include('./partials/nav') %>

    <div class="parallax">
        <div class="content">
            <h2 class="heading">Welcome to the</h2> <h2 class="heading-2">Blog App</h2> 
        </div>
    </div>

    <div class="container mt-3 card-container">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
            <% blogs.forEach(blog => { %>
                <div class="col">
                    <div class="card h-100">
                        <img src="<%= blog.coverImage %>" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title"><%= blog.title %></h5>
                            <a href="/blog/<%= blog.id %>" class="btn btn-primary">View</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <%- include('./partials/scripts') %> 
    <script>
        window.addEventListener('scroll', function() {
            let scrolled = window.scrollY;
            document.querySelector('.content').style.transform = 'translateY(' + (scrolled * 0.5) + 'px)';
        });
    </script>
</body>
</html>
